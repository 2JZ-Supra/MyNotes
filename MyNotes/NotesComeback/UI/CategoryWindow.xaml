<Window x:Class="UI.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Width="300"
        Height="400"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="GhostWhite" 
            CornerRadius="20" 
            BorderBrush="#CCCCCC"
            BorderThickness="1">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Кнопка закрытия (добавлен отступ) -->
            <Button Width="20" Height="20" 
                    Click="OkButton_Click" 
                    Background="LightGray" 
                    BorderBrush="Transparent" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <Viewbox>
                                <Canvas Width="32" Height="32">
                                    <Path Stroke="White" StrokeThickness="3" Data="M 8,8 L 24,24 M 24,8 L 8,24"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock Grid.Row="1" 
                       Text="Категории"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0"/>

            <Border Grid.Row="2" 
                    Background="#F8F8F8" 
                    CornerRadius="12" 
                    Margin="0,15,0,15"
                    Padding="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CategoriesPanel" Margin="0,10,0,10"/>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">

                <Button Content="Редактировать"
                        Width="110"
                        Height="30"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Click="EditButton_Click"/>

                <Button Content="Новая"
                        Width="80"
                        Height="30"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Margin="10,0,0,0"
                        Click="NewCategoryButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
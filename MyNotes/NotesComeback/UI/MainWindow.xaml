<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="Заметки"
        Height="600"
        Width="800"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <!-- Ресурсы: стиль для скруглённых кнопок -->
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#F5F5F5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Внешняя рамка с общим скруглением -->
    <Border Background="GhostWhite"
            CornerRadius="20"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Фильтры -->
                <RowDefinition Height="*"/>
                <!-- Таблица -->
                <RowDefinition Height="Auto"/>
                <!-- Нижняя панель -->
            </Grid.RowDefinitions>

            <!-- Заголовок + кнопки -->
            <Grid Grid.Row="0" Margin="20,15,20,10">
                <!-- Название по центру -->
                <TextBlock Text="My Notes"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Контейнер справа для кнопок -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0,0,8,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Кнопка закрытия -->
                    <Button Width="28" Height="28"
                            Margin="0"
                            Click="CloseButton_Click"
                            Background="LightGray"
                            BorderBrush="Transparent"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="{TemplateBinding Background}"/>
                                    <Viewbox Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Canvas Width="32" Height="32">
                                            <Path Stroke="White" StrokeThickness="3" Data="M 8,8 L 24,24 M 24,8 L 8,24"/>
                                        </Canvas>
                                    </Viewbox>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Панель фильтров -->
            <Border Grid.Row="1"
                    Background="#F8F8F8"
                    CornerRadius="10"
                    Margin="20,10,20,10"
                    Padding="6"
                    BorderBrush="Transparent"
                    BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Категория:"
                               VerticalAlignment="Center"
                               FontWeight="Medium"
                               Margin="0,0,10,0"/>

                    <ComboBox x:Name="CategoryFilterComboBox"
                              Grid.Column="1"
                              BorderBrush="#CCCCCC"
                              BorderThickness="1"
                              Background="White"
                              Height="22"
                              VerticalAlignment="Center"
                              SelectionChanged="CategoryFilterComboBox_SelectionChanged"
                              Margin="0,0,6,0"/>

                    <CheckBox Grid.Column="2"
                              x:Name="FavoritesFilterCheckBox"
                              Content="Избранное"
                              VerticalAlignment="Center"
                              Margin="8,0,0,0"
                              Checked="FavoritesFilterCheckBox_Changed"
                              Unchecked="FavoritesFilterCheckBox_Changed"/>

                    <!-- Пустое место (растяжка) -->
                    <StackPanel Grid.Column="3"/>

                    <!-- Кнопки: Новая заметка -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="0,0,8,0"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button x:Name="CreateNoteButton"
                                Content="Новая заметка"
                                Width="120"
                                Height="30"
                                Background="White"
                                BorderBrush="#CCCCCC"
                                Margin="0,0,5,0"
                                Click="CreateNoteButton_Click"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>

                    <!-- Кнопка удалить -->
                    <StackPanel Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Удалить"
                                Width="90"
                                Height="30"
                                Background="White"
                                BorderBrush="#CCCCCC"
                                Click="DeleteNoteButton_Click"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Таблица -->
            <Border Grid.Row="2"
                    Background="#F8F8F8"
                    CornerRadius="12"
                    Margin="20,0,20,12"
                    Padding="1">
                <DataGrid x:Name="NotesDataGrid"
                          AutoGenerateColumns="False"
                          Background="White"
                          BorderThickness="0"
                          SelectionMode="Single"
                          MouseDoubleClick="NotesDataGrid_MouseDoubleClick"
                          RowEditEnding="NotesDataGrid_RowEditEnding"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Заголовок"
                                            Binding="{Binding Title}"
                                            Width="2.5*"
                                            MinWidth="150"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Категории"
                                            Binding="{Binding CategoriesDisplay}"
                                            Width="1.5*"
                                            MinWidth="100"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Дата создания"
                                            Binding="{Binding CreatedAt}"
                                            Width="1.5*"
                                            MinWidth="120"
                                            IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="Избранное"
                                                Binding="{Binding IsFavorite}"
                                                Width="1*"
                                                MinWidth="80"
                                                IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Нижняя панель с кнопкой статистики -->
            <Border Grid.Row="3"
                    Background="#F8F8F8"
                    CornerRadius="10"
                    Margin="20,0,20,20"
                    Height="50"
                    Padding="6"
                    BorderBrush="Transparent"  
                    BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="StatisticsButton"
        Content="Статистика"
        Width="120"
        Height="Auto"
        Background="White"
        BorderBrush="#CCCCCC"
        Margin="0,0,5,0"
        HorizontalAlignment="Left"
        Click="StatisticsButton_Click"
        VerticalAlignment="Center"
        Style="{StaticResource RoundedButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
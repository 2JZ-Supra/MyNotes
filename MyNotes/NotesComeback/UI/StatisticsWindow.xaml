<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика — заметки по месяцам"
        MinHeight="640" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <TabControl x:Name="StatsTabs" Margin="12">

        <!-- ВКЛАДКА 1 — ПО МЕСЯЦАМ -->
        <TabItem Header="По месяцам">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1) Заголовок -->
                <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Статистика: распределение заметок по месяцам"
                           FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <TextBlock x:Name="NotesCountTextBlock" Text="Заметок: 0"
                               FontSize="14" Margin="0,0,20,0"/>
                        <TextBlock x:Name="CategoriesCountTextBlock" Text="Категорий: 0"
                               FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- 2) ПАНЕЛЬ ФИЛЬТРОВ -->
                <StackPanel Grid.Row="1" Margin="0,5,0,10">

                    <!-- Заголовок фильтров -->
                    <Border Background="#F1F1F1"
                        Padding="10"
                        Cursor="Hand"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="6"
                        MouseLeftButtonUp="FiltersHeader_Click">

                        <DockPanel>
                            <TextBlock x:Name="FiltersArrow"
                                   Text="▼"
                                   FontWeight="Bold"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Фильтры"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                    </Border>

                    <!-- Содержимое фильтров -->
                    <Border x:Name="FiltersPanel"
                        Background="#FAFAFA"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10"
                        Margin="0,5,0,0"
                        Visibility="Collapsed">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                            <!-- ГОД -->
                            <StackPanel Orientation="Horizontal" Margin="8,0">
                                <TextBlock Text="Год:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="YearFromCombo" Width="80" SelectionChanged="Filter_Changed"/>
                                <TextBlock Text="–" Margin="4,0" VerticalAlignment="Center"/>
                                <ComboBox x:Name="YearToCombo" Width="80" SelectionChanged="Filter_Changed"/>
                            </StackPanel>

                            <!-- МЕСЯЦ -->
                            <StackPanel Orientation="Horizontal" Margin="8,0">
                                <TextBlock Text="Месяц:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="MonthFromCombo" Width="110" SelectionChanged="Filter_Changed"/>
                                <TextBlock Text="–" Margin="4,0" VerticalAlignment="Center"/>
                                <ComboBox x:Name="MonthToCombo" Width="110" SelectionChanged="Filter_Changed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 3) Участок с диаграммой -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="8">
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="8" Background="White">
                            <Canvas x:Name="PieCanvas"
        MinWidth="400"
        MinHeight="400"
        Background="Transparent"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="8" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Легенда (месяц — количество — %)" 
                                   FontWeight="Bold" Margin="0,0,0,8"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="520">
                                <StackPanel x:Name="LegendPanel" />
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 4) Подвал -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <Button Content="Закрыть" Width="110" Click="CloseButton_Click"/>
                </StackPanel>

            </Grid>
        </TabItem>


        <!-- ВКЛАДКА 2 — ПО КАТЕГОРИЯМ (пока пустая, добавим позже) -->
        <TabItem Header="По категориям">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Статистика: распределение заметок по категориям"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" />

                    <!-- Сортировка -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="CategorySortCombo" Width="180"
                          SelectionChanged="CategorySortCombo_Changed">
                            <ComboBoxItem Content="По убыванию (больше → меньше)" />
                            <ComboBoxItem Content="По возрастанию (меньше → больше)" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Диаграмма -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Canvas для столбцов -->
                    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="8" Background="White" Margin="8">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="300">
                            <Canvas x:Name="CategoryBarCanvas" Background="Transparent" Height="300"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Легенда -->
                    <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1"
                    CornerRadius="6" Padding="8" Margin="8,0,0,0" Height="430">
                        <StackPanel>
                            <TextBlock Text="Категории" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="460">
                                <StackPanel x:Name="CategoryLegendPanel"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Кнопка закрытия -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <Button Content="Закрыть" Width="110" Click="CloseButton_Click"/>
                </StackPanel>

            </Grid>
        </TabItem>

    </TabControl>

</Window>

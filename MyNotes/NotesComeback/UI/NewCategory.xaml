<Window x:Class="UI.NewCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Width="350"
        Height="Auto"
    SizeToContent="Height"
    Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="GhostWhite" 
            CornerRadius="20" 
            BorderBrush="#CCCCCC"
            BorderThickness="1">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Подпись -->
                <RowDefinition Height="Auto"/>
                <!-- TextBox -->
                <RowDefinition Height="20"/>
                <!-- Отступ между TextBox и кнопками -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки -->
            </Grid.RowDefinitions>

            <!-- Заголовок и кнопка закрытия -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Новая категория"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"/>

                <Button Width="20" Height="20" 
                        Click="CancelButton_Click" 
                        Background="LightGray" 
                        BorderBrush="Transparent" 
                        HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}"/>
                                <Viewbox>
                                    <Canvas Width="32" Height="32">
                                        <Path Stroke="White" StrokeThickness="3" Data="M 8,8 L 24,24 M 24,8 L 8,24"/>
                                    </Canvas>
                                </Viewbox>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Название категории -->
            <TextBlock Grid.Row="1" 
                       Text="Название категории:" 
                       Margin="0,0,0,8"
                       FontWeight="Medium"/>

            <!-- TextBox -->
            <Border Grid.Row="2" 
                    CornerRadius="8" 
                    Background="White"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                <TextBox x:Name="CategoryNameTextBox"
                         MaxLength="50"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="12,10"
                         FontSize="14"
                         Foreground="Black"
                         VerticalContentAlignment="Center"
                         CaretBrush="Black"
                         SelectionBrush="#ADD8E6"
                         MinHeight="35"/>
            </Border>

            <!-- Кнопки в отдельной строке -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Отмена" 
                        Width="90"
                        Height="30"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>

                <Button Content="Создать" 
                        Width="90"
                        Height="30"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
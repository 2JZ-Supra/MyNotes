<Window x:Class="UI.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заметка"
        Height="400"
        Width="500"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="GhostWhite"
        CornerRadius="20"
        BorderBrush="#D0D0D0"
        BorderThickness="1">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                <Border CornerRadius="8" 
            Background="#FAFAFA" 
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="0"
            VerticalAlignment="Center"
            Width="350">
                    <TextBox x:Name="TitleTextBox"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="8"
                 FontSize="14"
                 VerticalContentAlignment="Center"/>
                </Border>

                <CheckBox x:Name="FavoriteCheckBox"
              Content="Избранное"
              Margin="10,0,0,0"
              VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Текст заметки -->
            <Border CornerRadius="10"
        Background="#FAFAFA"
        BorderBrush="#DDD"
        BorderThickness="1"
        Padding="0"
        Grid.Row="1"
        Margin="0,10,0,10">
                <TextBox x:Name="ContentTextBox"
             Background="Transparent"
             BorderThickness="0"
             Padding="10"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Категории"
                        Width="90"
                        Height="28"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderThickness="1"
                        Margin="0,0,10,0"
                        Click="CategoriesButton_Click"/>

                <Button Content="Отмена"
                        Width="80"
                        Height="28"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderThickness="1"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>

                <Button Content="Сохранить"
                        Width="90"
                        Height="28"
                        Background="GhostWhite"
                        Foreground="Black"
                        BorderThickness="1"
                        Click="SaveButton_Click"/>

            </StackPanel>
        </Grid>

    </Border>
</Window>

<Window x:Class="UI.CategorySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Выбор категорий" 
        Height="500" 
        Width="330"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="CategoryItemStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#f8f8f8" 
                Padding="10"
                BorderBrush="#cccccc"
                BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Новая категория:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="NewCategoryTextBox" 
                             Width="200"
                             Margin="0,0,10,0"
                             KeyDown="NewCategoryTextBox_KeyDown"/>

                    <Button x:Name="AddCategoryButton" 
                            Content="Добавить"
                            Style="{StaticResource ButtonStyle}"
                            Click="AddCategoryButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" 
                      Margin="10">
            <ItemsControl x:Name="CategoriesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#e0e0e0" 
                                BorderThickness="0,0,0,1" 
                                Padding="5">
                            <StackPanel Style="{StaticResource CategoryItemStyle}">
                                <CheckBox x:Name="CategoryCheckBox"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Margin="0,0,10,0"
                                          VerticalAlignment="Center"/>

                                <TextBlock Text="{Binding Category.Name}" 
                                           VerticalAlignment="Center"
                                           Width="300"/>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="#f8f8f8" 
                Padding="10"
                BorderBrush="#cccccc"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Отмена"
                        Style="{StaticResource ButtonStyle}"
                        Click="CancelButton_Click"/>

                <Button x:Name="SaveButton" 
                        Content="Сохранить"
                        Style="{StaticResource ButtonStyle}"
                        Background="#4CAF50"
                        Foreground="White"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
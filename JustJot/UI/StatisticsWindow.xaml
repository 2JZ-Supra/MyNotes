<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Статистика заметок" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка 1: Статистика по месяцам -->
            <TabItem Header="Распределение по месяцам">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- фильтры -->
                    <Border Grid.Row="0" 
                            Background="#f8f8f8" 
                            Padding="15"
                            BorderBrush="#cccccc"
                            BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Период:" 
                                       Style="{StaticResource LabelStyle}"
                                       FontWeight="Bold"/>

                            <TextBlock Text="С:" 
                                       Style="{StaticResource LabelStyle}"/>

                            <DatePicker x:Name="MonthFromDatePicker" 
                                        Style="{StaticResource DatePickerStyle}"/>

                            <TextBlock Text="По:" 
                                       Style="{StaticResource LabelStyle}"/>

                            <DatePicker x:Name="MonthToDatePicker" 
                                        Style="{StaticResource DatePickerStyle}"/>

                            <Button x:Name="UpdateMonthChartButton"
                                    Content="Обновить"
                                    Style="{StaticResource ButtonStyle}"
                                    Click="UpdateMonthChartButton_Click"/>

                            <Button x:Name="CurrentYearButton"
                                    Content="Текущий год"
                                    Style="{StaticResource ButtonStyle}"
                                    Click="CurrentYearButton_Click"/>

                            <Button x:Name="AllTimeButton"
                                    Content="Все время"
                                    Style="{StaticResource ButtonStyle}"
                                    Click="AllTimeButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- график и информация -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- диаграмма -->
                        <oxy:PlotView x:Name="MonthPlotView"
                                      Grid.Column="0"
                                      Margin="10"/>

                        <!-- информация -->
                        <Border Grid.Column="1"
                                Width="250"
                                Background="#f8f8f8"
                                BorderBrush="#cccccc"
                                BorderThickness="1,0,0,0"
                                Padding="10">
                            <StackPanel>
                                <TextBlock Text="Легенда" 
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,0,0,10"
                                           HorizontalAlignment="Center"/>

                                <ItemsControl x:Name="MonthLegendItemsControl"
                                              MaxHeight="400">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#e0e0e0" 
                                                    BorderThickness="0,0,0,1"
                                                    Padding="5,2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding MonthName}"
                                                               TextTrimming="CharacterEllipsis"/>

                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Total}"
                                                               FontWeight="Bold"
                                                               Margin="10,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Separator Margin="0,10,0,10"/>

                                <StackPanel>
                                    <TextBlock Text="Общая информация:" 
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="MonthSummaryText"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Вкладка 2: Статистика по категориям -->
            <TabItem Header="Использование категорий">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- панель управления -->
                    <Border Grid.Row="0" 
                Background="#f8f8f8" 
                Padding="15"
                BorderBrush="#cccccc"
                BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Статистика по категориям" 
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                            <Button x:Name="SortDescButton"
                        Content="По убыванию ▼"
                        Padding="10,5"
                        Margin="5"
                        MinWidth="120"
                        Background="#4a86e8"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SortDescButton_Click"
                        IsEnabled="False"/>

                            <Button x:Name="SortAscButton"
                        Content="По возрастанию ▲"
                        Padding="10,5"
                        Margin="5"
                        MinWidth="120"
                        Background="#4a86e8"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SortAscButton_Click"/>

                            <Button x:Name="RefreshCategoryButton"
                        Content="Обновить"
                        Padding="10,5"
                        Margin="20,0,0,0"
                        MinWidth="80"
                        Background="#27ae60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RefreshCategoryButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Основной контент -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Диаграмма -->
                        <oxy:PlotView x:Name="CategoryPlotView"
                          Grid.Column="0"
                          Margin="10"/>

                        <!-- инфа -->
                        <Border Grid.Column="1"
                    Width="250"
                    Background="#f8f8f8"
                    BorderBrush="#cccccc"
                    BorderThickness="1,0,0,0"
                    Padding="10">
                            <StackPanel>
                                <TextBlock Text="Список категорий" 
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                                <Border Height="250"
                            BorderBrush="#cccccc"
                            BorderThickness="1"
                            Background="White"
                            Padding="5">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="CategoryLegendItemsControl">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#e0e0e0" 
                                                BorderThickness="0,0,0,1"
                                                Padding="5,2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" 
                                                           Text="{Binding DisplayText}"
                                                           TextTrimming="CharacterEllipsis"/>

                                                            <Rectangle Grid.Column="1"
                                                           Width="12"
                                                           Height="12"
                                                           Margin="5,0,0,0"
                                                           Fill="SteelBlue"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <Separator Margin="0,15,0,15"/>

                                <StackPanel>
                                    <TextBlock Text="Общая информация" 
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>

                                    <Border Background="White"
                                BorderBrush="#cccccc"
                                BorderThickness="1"
                                Padding="10">
                                        <TextBlock x:Name="CategorySummaryText"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>
                                    </Border>
                                </StackPanel>

                                <Separator Margin="0,15,0,15"/>

                                <StackPanel>
                                    <TextBlock Text="Пояснение:" 
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                                    <TextBlock Text="• Диаграмма показывает, сколько заметок в каждой категории"
                                   FontSize="10"
                                   Foreground="#666"/>
                                    <TextBlock Text="• Используются все заметки (без фильтрации по датам)"
                                   FontSize="10"
                                   Foreground="#666"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
<Window x:Class="UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оплата приложения" 
        Height="400" 
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Активация приложения" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Номер карты (16 цифр)" Margin="0,5"/>
            <TextBox x:Name="CardNumberBox" Height="30" Margin="0,0,0,15"
                     TextChanged="CardNumberBox_TextChanged"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Срок действия (ММ/ГГ)" Margin="0,5"/>
                    <TextBox x:Name="ExpiryBox" Height="30" Margin="0,0,0,15"
                             TextChanged="ExpiryBox_TextChanged"
                             MaxLength="5"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="CVV (3 цифры)" Margin="0,5"/>
                    <TextBox x:Name="CvvBox" Height="30" Margin="0,0,0,15"
                             MaxLength="3"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Имя владельца" Margin="0,5"/>
            <TextBox x:Name="NameBox" Height="30" Margin="0,0,0,30"/>

            <Button x:Name="PayButton" 
                    Content="ОПЛАТИТЬ" 
                    Height="40" 
                    FontSize="16"
                    Background="#27ae60"
                    Foreground="White"
                    BorderThickness="0"
                    Click="PayButton_Click"/>
        </StackPanel>
    </Grid>
</Window>